{
    "info": {
        "name": "Beet Truck Management API",
        "description": "API collection for testing Beet Truck Management System",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"123456\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('token', response.data.token);",
                                    "    console.log('Token saved:', response.data.token);",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/me",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "me"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Contractors",
            "item": [
                {
                    "name": "Get All Contractors",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/contractors",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "contractors"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Contractor",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"مقاول جديد\",\n  \"phone\": \"0123456789\",\n  \"address\": \"القاهرة\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/contractors",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "contractors"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Factories",
            "item": [
                {
                    "name": "Get All Factories",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/factories",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "factories"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Factory",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"مصنع جديد\",\n  \"location\": \"المنوفية\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/factories",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "factories"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Trucks",
            "item": [
                {
                    "name": "Register Truck (Gate Employee)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"plateNumber\": \"أ ب ج 123\",\n  \"contractorId\": \"CONTRACTOR_ID_HERE\",\n  \"factoryId\": \"FACTORY_ID_HERE\",\n  \"factoryCardNumber\": \"FC123456\",\n  \"deviceCardNumber\": \"DC789012\",\n  \"gateId\": \"gate-1\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/trucks/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "trucks",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Register Truck (Military)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"plateNumber\": \"د ه و 456\",\n  \"contractorId\": \"CONTRACTOR_ID_HERE\",\n  \"factoryId\": \"FACTORY_ID_HERE\",\n  \"factoryCardNumber\": \"FC654321\",\n  \"deviceCardNumber\": \"DC210987\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/trucks/register-military",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "trucks",
                                "register-military"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Trucks",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/trucks",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "trucks"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{baseUrl}}/api/health",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "health"
                    ]
                }
            }
        }
    ]
}